---
import "../../assets/css/component/About/EquestMantra/EquestMantra.scss";
const { title } = Astro.props;
const BASE_URL =
  import.meta.env.BASE_URL.length > 1 ? import.meta.env.BASE_URL : ".";
---

<section class="eq_mantra_sec white_bg">
  <div class="container">
    <div class="row">
      <div class="col-lg-10 col-xxl-9 col-12 mx-auto">
        <div class="eq_mantra_content_wrapper sec_pt sec_pb">
          <div class="eq_mantra-left">
            <img
              src={BASE_URL + "/images/quote.svg"}
              alt="quote_img"
              class="img-fluid me-2 me-md-3"
            />
            {title}
          </div>
          <div class="eq_mantra-right">
            <p>
              Life is Short,
              <br /> Build stuff that matters
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
