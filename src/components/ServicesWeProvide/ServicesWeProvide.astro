---
import ServiceCard from "../Services/ServiceCard";
// import "./ServicesWeProvide.scss";
const { title, description } = Astro.props;
---

<section class="main-services">
  <div class="main-services__container">
    <div class="row">
      <div class="col-md-4 col-lg-3 col-12">
        <div class="main-services__content">
          <div class="heading_wrapper">
            <h2 class="sec_heading sec_heading-medium with_border">
              {title}
            </h2>
          </div>
          <div class="main-services__desc">
            <p>{description}</p>
            {
              /* <Link to="/services" class='btn btn_secondary'>{props.linkName}</Link> */
            }
          </div>
        </div>
      </div>
      <div class="col-md-8 col-lg-9 col-12">
        <div class="main-services__slider-wrapper">
          <ServiceCard client:only="react" />
        </div>
      </div>
    </div>
  </div>
</section>
